command=/usr/share/i3blocks/$BLOCK_NAME
separator_block_width=15
markup=none

[disk]
label=DISK
command=~/.config/i3blocks/disk -w 10
separator=true
interval=5

[cpu]
label=CPU
command=~/.config/i3blocks/cpu -w 10
separator=true
interval=3

[ram]
label=RAM
command=~/.config/i3blocks/ram -w 10
separator=true
interval=5

[nvidia]
label=GPU
command=~/.config/i3blocks/nvidia -w 10
separator=true
interval=5

[iface]
interval=10
separator=true

[battery]
label=BAT
separator=true
interval=30

[volume]
label=VOL
instance=Master
interval=once
separator=true
signal=10

[time]
command=date '+%a %Y-%m-%d %H:%M:%S'
separator=true
interval=5
